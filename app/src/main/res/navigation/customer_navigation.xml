<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customer_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sumeet.cars360.ui.customer.fragments.CustomerHomeFragment"
        android:label="Welcome to Cars 360" />
    <fragment
        android:id="@+id/navigation_explore"
        android:name="com.sumeet.cars360.ui.customer.fragments.CustomerExploreFragment"
        android:label="fragment_customer_explore"
        tools:layout="@layout/fragment_customer_explore" />
    <fragment
        android:id="@+id/navigation_help"
        android:name="com.sumeet.cars360.ui.customer.fragments.CustomerHelpFragment"
        android:label="Reach Us"
        tools:layout="@layout/fragment_customer_help" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.sumeet.cars360.ui.customer.fragments.CustomerProfileFragment"
        android:label="YOUR CAR SALON"
        tools:layout="@layout/fragment_customer_profile" />
    <fragment
        android:id="@+id/customerLoginProfileFragment"
        android:name="com.sumeet.cars360.ui.onboarding.fragments.customer.CustomerLoginProfileFragment"
        android:label="LOGIN PAGE"
        tools:layout="@layout/fragment_customer_login_profile" >
        <action
            android:id="@+id/action_customerLoginProfileFragment_to_OTPFragment2"
            app:destination="@id/OTPFragment2" />
        <action
            android:id="@+id/action_customerLoginProfileFragment_to_navigation_profile2"
            app:destination="@id/navigation_profile" />
    </fragment>
    <fragment
        android:id="@+id/OTPFragment2"
        android:name="com.sumeet.cars360.ui.onboarding.fragments.customer.OTPFragment"
        android:label="OTP PAGE"
        tools:layout="@layout/fragment_o_t_p" >
        <action
            android:id="@+id/action_OTPFragment2_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

</navigation>