<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_80sdp"
    android:layout_margin="@dimen/_5sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryRed"
        android:text="\n  \u2022 Every 10000 KM or 6 Months recommended\n"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryRed"
        android:text="  \u2022 What's Included?"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="        \u2022 Engine Oil Replacement"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="        \u2022 Oil Filter Replacement"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="        \u2022 Air Filter Cleaning"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="        \u2022 Coolant Top Up"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="        \u2022  Wiper Fluid Refill"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="        \u2022  Pre &amp; Post Health Report, After Before Images"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:textColor="@color/secondaryRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\n  \u2022 Additional Services Available :"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="        \u2022 Car Wash"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="        \u2022 Interior Vacumming"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="        \u2022 Car Polish"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/secondaryRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Cost ->   "
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TextView
            android:id="@+id/tvCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3000"
            android:textColor="@color/primaryRed"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/tvOurCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="    3000"
            android:textColor="@color/bright_green"
            android:textAppearance="@android:style/TextAppearance.Large" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvSaving"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="You will be saving 3000 with Cars360 "
        android:textAppearance="@android:style/TextAppearance.Large" />

</LinearLayout>