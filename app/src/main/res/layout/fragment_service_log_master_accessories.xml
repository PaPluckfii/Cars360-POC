<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.admin.fragments.service_log.ServiceLogMasterAccessoriesFragment">

    <TextView
        android:id="@+id/tvPleaseTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="Please Tick "
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/primaryRed"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/accessoriesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPleaseTick"
        android:paddingBottom="@dimen/_50sdp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        style="@style/MyFilledButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_10sdp"/>

</RelativeLayout>